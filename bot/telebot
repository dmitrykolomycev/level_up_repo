import telebot
from telebot import types
import requests
import random


bot = telebot.TeleBot('') 



@bot.message_handler(commands=['start'])
def start(message):
    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("–ö–Ω–æ–ø–∫–∞ –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏—èüêØ")
    markup.add(btn1)
    bot.send_message(message.from_user.id, '–ü—Ä–∏–≤–µ—Ç, —è —É—á–µ–±–Ω—ã–π –±–æ—Ç –æ—Ç —É—á–µ–Ω–∏–∫–∞ —Ü–µ–Ω—Ç—Ä–∞ IT –æ–±—Ä–∞–∑–æ–≤–∞–Ω–∏—è LevelUpü§©', reply_markup=markup)

@bot.message_handler(content_types=['text'])
def get_text_messages(message):

    if message.text == "–ö–Ω–æ–ø–∫–∞ –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–∏—èüêØ":
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True) #–Ω–∞–¥–æ –ø—Ä–æ–ø–∏—Å—ã–≤–∞—Ç—å –¥–ª—è –ø–æ—è–≤–ª–µ–Ω–∏—è –∫–Ω–æ–ø–æ–∫ –∫–∞–∂–¥—ã–π —Ä–∞–∑ –∫–æ–≥–¥–∞ –Ω—É–∂–Ω–∞ –∫–Ω–æ–ø–∫–∞
        btn1 = types.KeyboardButton("–û–±–æ –º–Ω–µ")
        btn2 = types.KeyboardButton("–°–ø—Ä–∞–≤–æ—á–Ω—ã–π —Å–µ—Ä–≤–∏—Å")
        btn3 = types.KeyboardButton("–ö–Ω–æ–ø–∫–∞ —á–∏–ª–∞ -)")

        markup.add(btn1, btn2, btn3)
        bot.send_message(message.from_user.id, '–ó–∞–¥–∞–π—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–∞—Å –≤–æ–ø—Ä–æ—Å‚ùì', reply_markup=markup)

      #—Ä–∞–∑–¥–µ–ª –æ–±–æ –º–Ω–µ, –µ—â–µ –µ–≥–æ –∫–∞–∫ –Ω–∏—Ç—å –ø–æ–º–µ—á–∞—Ç—å –±—ã
    elif message.text == "–û–±–æ –º–Ω–µ":
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)#–Ω–∞–¥–æ –ø—Ä–æ–ø–∏—Å—ã–≤–∞—Ç—å –¥–ª—è –ø–æ—è–≤–ª–µ–Ω–∏—è –∫–Ω–æ–ø–æ–∫
        btn4 = types.KeyboardButton("–°—Å–ª—ã–∫–∞ –Ω–∞ —Ä–µ–∑—é–º–µ")
        btn5 = types.KeyboardButton("–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ–±–æ –º–Ω–µ")
        btn_main = types.KeyboardButton("–í–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞ –≥–ª–∞–≤–Ω—ã–π")
        markup.add(btn4, btn5, btn_main) #—Ç–∏–ø–∞ –¥–æ–±–∞–≤–ª—è–µ–º –∫–Ω–æ–ø–∫–∏ –¥–ª—è –≤—ã–±–æ—Ä–∞
        bot.send_message(message.from_user.id, '–í—ã–±–µ—Ä–∏—Ç–µ, —á—Ç–æ –≤–∞—Å –∏–Ω—Ç–µ—Ä–µ—Å—É–µ—Ç‚ùì', reply_markup=markup)  #—Ä–∞–∑–¥–µ–ª –æ–±–æ –º–Ω–µ, –µ—â–µ –µ–≥–æ –∫–∞–∫ –Ω–∏—Ç—å –ø–æ–º–µ—á–∞—Ç—å –±—ã

    elif message.text == "–°—Å–ª—ã–∫–∞ –Ω–∞ —Ä–µ–∑—é–º–µ":
        bot.send_message(message.from_user.id,
                         '–í–æ—Ç –≤–∞—à–∞ —Å—Å—ã–ª–∫–∞ –Ω–∞ —Ä–µ–∑—é–º–µ: https://spb.hh.ru/resume/dba6bd30ff081a5da90039ed1f496833783636')

    elif message.text == "–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è –æ–±–æ –º–Ω–µ":
        bot.send_message(message.from_user.id,
                         '–ü—Ä–∏–≤–µ—Ç! –º–µ–Ω—è –∑–æ–≤—É—Ç –î–º–∏—Ç—Ä–∏–π —è —Ä–∞–±–æ—Ç–∞—é QA MAnual –≤ —Ñ–∏–Ω-—Ç–µ—Ö–µ –∏ –∏–∑—É—á–∞—é –ø–∏—Ç–æ–Ω, —á—Ç–æ –±—ã –ø–µ—Ä–µ–π—Ç–∏ –≤ AQA')

    elif message.text == "–í–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞ –≥–ª–∞–≤–Ω—ã–π": #–∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è –≤–æ–∑–≤—Ä–∞—Ç–∞ –Ω–∞ –≥–ª–∞–Ω–æ–µ –º–µ–Ω—é
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1 = types.KeyboardButton("–û–±–æ –º–Ω–µ")
        btn2 = types.KeyboardButton("–°–ø—Ä–∞–≤–æ—á–Ω—ã–π —Å–µ—Ä–≤–∏—Å")
        btn3 = types.KeyboardButton("–ö–Ω–æ–ø–∫–∞ —á–∏–ª–∞ -)")

        markup.add(btn1, btn2, btn3)
        bot.send_message(message.from_user.id, '–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å! –ó–∞–¥–∞–π—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–∞—Å –≤–æ–ø—Ä–æ—Å‚ùì',
                         reply_markup=markup)

# —Å–ø—Ä–∞–≤–æ—á–Ω—ã–π —Å–µ—Ä–≤–∏—Å ----------------------------------------------------------------------
    elif message.text == "–°–ø—Ä–∞–≤–æ—á–Ω—ã–π —Å–µ—Ä–≤–∏—Å":
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn_excange_rate = types.KeyboardButton("–ö—É—Ä—Å –¥–æ–ª–ª–∞—Ä/—Ä—É–±–ª—å")
        btn_excange_rate_euro = types.KeyboardButton("–ö—É—Ä—Å –µ–≤—Ä–æ/—Ä—É–±–ª—å")
        btn_main = types.KeyboardButton("–í–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞ –≥–ª–∞–≤–Ω—ã–π")
        markup.add(btn_excange_rate, btn_excange_rate_euro, btn_main)
        bot.send_message(message.from_user.id, '–í—ã–±–µ—Ä–∏—Ç–µ, —á—Ç–æ —Ö–æ—Ç–µ–ª–∏ –±—ã —É–∑–Ω–∞—Ç—å‚ùì', reply_markup=markup)

    elif message.text == "–ö—É—Ä—Å –¥–æ–ª–ª–∞—Ä/—Ä—É–±–ª—å":
        response = requests.get("https://open.er-api.com/v6/latest/USD")
        if response.status_code == 200:
            data = response.json()
            response = requests.get("https://open.er-api.com/v6/latest/USD")
            data = response.json()
            rub = data['rates']['RUB']
            bot.send_message(message.from_user.id, f'–ó–∞ –¥–æ–ª–ª–∞—Ä –¥–∞—é—Ç {rub}  —Ä—É–±–ª–µ–π. ')
        else:
            bot.send_message(message.from_user.id, '–ë–µ—Å–ø–ª–∞—Ç–Ω–∞—è –∞–ø–∏—Ö–∞ –æ—Ç–≤–∞–ª–∏–ª–∞—Å—å...—Å–æ—Ä—è–Ω, –º–æ–∂–µ—Ç –ø–æ–∑–∂–µ.')

    elif message.text == "–ö—É—Ä—Å –µ–≤—Ä–æ/—Ä—É–±–ª—å":
        response = requests.get("https://open.er-api.com/v6/latest/EUR")
        if response.status_code == 200:
            data = response.json()
            response = requests.get("https://open.er-api.com/v6/latest/EUR")
            data = response.json()
            rub = data['rates']['RUB']
            bot.send_message(message.from_user.id, f'–ó–∞ –µ–≤—Ä–æ –¥–∞—é—Ç {rub}  —Ä—É–±–ª–µ–π. ')
        else:
            bot.send_message(message.from_user.id, '–ë–µ—Å–ø–ª–∞—Ç–Ω–∞—è –∞–ø–∏—Ö–∞ –æ—Ç–≤–∞–ª–∏–ª–∞—Å—å...—Å–æ—Ä—è–Ω, –º–æ–∂–µ—Ç –ø–æ–∑–∂–µ.')
    elif message.text == "–í–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞ –≥–ª–∞–≤–Ω—ã–π": #–∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è –≤–æ–∑–≤—Ä–∞—Ç–∞ –Ω–∞ –≥–ª–∞–Ω–æ–µ –º–µ–Ω—é
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1 = types.KeyboardButton("–û–±–æ –º–Ω–µ")
        btn2 = types.KeyboardButton("–°–ø—Ä–∞–≤–æ—á–Ω—ã–π —Å–µ—Ä–≤–∏—Å")
        btn3 = types.KeyboardButton("–ö–Ω–æ–ø–∫–∞ —á–∏–ª–∞ -)")

        markup.add(btn1, btn2, btn3)
        bot.send_message(message.from_user.id, '–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å! –ó–∞–¥–∞–π—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–∞—Å –≤–æ–ø—Ä–æ—Å‚ùì',
                         reply_markup=markup)


  #–†–∞–∑–¥–µ–ª –ø—Ä–æ —á–∏–ª----------------------------------------------------
    elif message.text == "–ö–Ω–æ–ø–∫–∞ —á–∏–ª–∞ -)":
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn_chak_joke = types.KeyboardButton('–®—É—Ç–∫–∞ –æ—Ç –ß–∞–∫–∞ –ù–æ—Ä–∏—Å–∞(–∞ –º–æ–∂–µ—Ç –∏ –≤–∏—Ä—Ç—É—Ö–∞)')
        btn_top_new_rfpl = types.KeyboardButton('–¶–∏—Ç–∞—Ç—ã –æ—Ç JSON(—Å—Ç–µ—Ç—Ö–µ–º)')
        btn_main = types.KeyboardButton("–í–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞ –≥–ª–∞–≤–Ω—ã–π")
        markup.add(btn_chak_joke, btn_top_new_rfpl, btn_main)
        bot.send_message(message.from_user.id, '–í—ã–±–µ—Ä–∏—Ç–µ –≤–∞—Ä–∏–∞–Ω—Ç —á–∏–ª–∞ ))', reply_markup=markup)

    elif message.text == '–®—É—Ç–∫–∞ –æ—Ç –ß–∞–∫–∞ –ù–æ—Ä–∏—Å–∞(–∞ –º–æ–∂–µ—Ç –∏ –≤–∏—Ä—Ç—É—Ö–∞)':
        response = requests.get("https://api.chucknorris.io/jokes/random")
        if response.status_code == 200:
            data = response.json()
            joke = data['value']
            bot.send_message(message.from_user.id, f'–®—É—Ç–∫–∞ –æ—Ç –ß–∞–∫–∞: {joke}')
        else:
            bot.send_message(message.from_user.id, '–®—É—Ç–∫–∏ –ø—Ä–æ –ß–∞–∫–∞ –ø–æ–∫–∞ –Ω–µ–¥–æ—Å—Ç—É–ø–Ω—ã....–ø—É –ø—É –ø—É ....')

    elif message.text == '–¶–∏—Ç–∞—Ç—ã –æ—Ç JSON(—Å—Ç–µ—Ç—Ö–µ–º)':
        quote = ['–°–∏–ª–∞ ‚Äì –Ω–µ –≤ –±–∞–±–∫–∞—Ö. –í–µ–¥—å –±–∞–±–∫–∏ ‚Äì —É–∂–µ —Å—Ç–∞—Ä—ã–µ.', '–ò–∑ –ø—Ä–æ–≤–µ–¥—ë–Ω–Ω—ã—Ö 64-—Ö –±–æ—ë–≤ —É –º–µ–Ω—è 64 –ø–æ–±–µ–¥—ã. –í—Å–µ –±–æ–∏ –±—ã–ª–∏ —Å —Ç–µ–Ω—å—é',
                 '–í–∑—è–ª –Ω–æ–∂ - —Ä–µ–∂—å, –≤–∑—è–ª –¥–æ—à–∏–∫ - –µ—à—å', '–Ø –∂–∏–≤—É, –∫–∞–∫ –∫–∞—Ä—Ç–∞ –ª—è–∂–µ—Ç. –¢—ã –∂–∏–≤—ë—à—å, –∫–∞–∫ –º–∞–º–∫–∞ —Å–∫–∞–∂–µ—Ç.', '–ù–∏–∫–æ–≥–¥–∞ –Ω–µ —Å–¥–∞–≤–∞–π—Ç–µ—Å—å, –∏–¥–∏—Ç–µ –∫ —Å–≤–æ–µ–π —Ü–µ–ª–∏! –ê –µ—Å–ª–∏ –±—É–¥–µ—Ç —Å–ª–æ–∂–Ω–æ ‚Äì —Å–¥–∞–≤–∞–π—Ç–µ—Å—å.',
                 '–ï—Å–ª–∏ –∑–∞–±–ª—É–¥–∏–ª—Å—è –≤ –ª–µ—Å—É, –∏–¥–∏ –¥–æ–º–æ–π.','–ó–∞–ø–æ–º–Ω–∏: –≤—Å–µ–≥–æ –æ–¥–Ω–∞ –æ—à–∏–±–∫–∞ ‚Äì –∏ —Ç—ã –æ—à–∏–±—Å—è.', '–Ø –≤–æ–æ–±—â–µ –¥–µ–ª–∞—é —á—Ç–æ —Ö–æ—á—É. –•–æ—á—É –∏–º–ø–ª–∞–Ω—Ç—ã ‚Äî –∑–≤–æ–Ω—é –≤—Ä–∞—á—É.',
                 '–í –∂–∏–∑–Ω–∏ –≤—Å–µ–≥–¥–∞ –µ—Å—Ç—å –¥–≤–µ –¥–æ—Ä–æ–≥–∏: –æ–¥–Ω–∞ ‚Äî –ø–µ—Ä–≤–∞—è, –∞ –¥—Ä—É–≥–∞—è ‚Äî –≤—Ç–æ—Ä–∞—è.', '–ú—ã –¥–æ–ª–∂–Ω—ã –æ—Å—Ç–∞–≤–∞—Ç—å—Å—è –º—ã–º–∏, –∞ –æ–Ω–∏ ‚Äì –æ–Ω–∏–º–∏.', '–î–µ–ª–∞–π, –∫–∞–∫ –Ω–∞–¥–æ. –ö–∞–∫ –Ω–µ –Ω–∞–¥–æ, –Ω–µ –¥–µ–ª–∞–π.',
                 '–°–Ω–∏–º—É –∫–≤–∞—Ä—Ç–∏—Ä—É. –ü–æ—Ä—è–¥–æ–∫ –Ω–∞ —Ä–∞–π–æ–Ω–µ –≥–∞—Ä–∞–Ω—Ç–∏—Ä—É—é.', '–†–∞–±–æ—Ç–∞ ‚Äî —ç—Ç–æ –Ω–µ –≤–æ–ª–∫. –†–∞–±–æ—Ç–∞ ‚Äî –≤–æ—Ä–∫. –ê –≤–æ–ª–∫ ‚Äî —ç—Ç–æ —Ö–æ–¥–∏—Ç—å.', '–ù–µ –±—É–¥—å—Ç–µ —ç–≥–æ–∏—Å—Ç–∞–º–∏, –≤ –ø–µ—Ä–≤—É—é –æ—á–µ—Ä–µ–¥—å –¥—É–º–∞–π—Ç–µ –æ —Å–µ–±–µ!',
                 '–ú–∞—Ä–∏–∞–Ω—Å–∫—É—é –≤–ø–∞–¥–∏–Ω—É –∑–Ω–∞–µ—à—å? –≠—Ç–æ —è —É–ø–∞–ª.', '–ö–∞–∫ –≥–æ–≤–æ—Ä–∏–ª –º–æ–π –¥–µ–¥, ¬´–Ø —Ç–≤–æ–π –¥–µ–¥¬ª.', '–ë–µ–∑ –ø–æ–¥–æ—à–≤—ã —Ç–∞–ø–æ—á–∫–∏ ‚Äî —ç—Ç–æ –ø—Ä–æ—Å—Ç–æ —Ç—Ä—è–ø–æ—á–∫–∏.', '–°–ª–æ–≤–æ - –Ω–µ –≤–æ—Ä–æ–±–µ–π. –í–æ–æ–±—â–µ –Ω–∏—á—Ç–æ –Ω–µ –≤–æ—Ä–æ–±–µ–π, –∫—Ä–æ–º–µ —Å–∞–º–æ–≥–æ –≤–æ—Ä–æ–±—å—è.',
                 '–ñ–∏-—à–∏ –ø–∏—à–∏ –æ—Ç –¥—É—à–∏.', '–ï—Å–ª–∏ —Ç–µ–±–µ –≥–¥–µ-—Ç–æ –Ω–µ —Ä–∞–¥—ã –≤ —Ä–≤–∞–Ω—ã—Ö –Ω–æ—Å–∫–∞—Ö, —Ç–æ –∏ –≤ —Ü–µ–ª—ã—Ö —Ç—É–¥–∞ –∏–¥—Ç–∏ –Ω–µ —Å—Ç–æ–∏—Ç.', '–†–∞–±–æ—Ç–∞ –Ω–µ –≤–æ–ª–∫. –ù–∏–∫—Ç–æ –Ω–µ –≤–æ–ª–∫. –¢–æ–ª—å–∫–æ –≤–æ–ª–∫ –≤–æ–ª–∫.']


        random_quote = random.choice(quote)
        bot.send_message(message.from_user.id, f'–¶–∏—Ç–∞—Ç–∞ –æ—Ç –î–∂–µ—Å–æ–Ω–∞: {random_quote}')

    elif message.text == "–í–µ—Ä–Ω—É—Ç—å—Å—è –Ω–∞ –≥–ª–∞–≤–Ω—ã–π":   #–∫–æ–Ω—Å—Ç—Ä—É–∫—Ü–∏—è –≤–æ–∑–≤—Ä–∞—Ç–∞ –Ω–∞ –≥–ª–∞–Ω–æ–µ –º–µ–Ω—é
        markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
        btn1 = types.KeyboardButton("–û–±–æ –º–Ω–µ")
        btn2 = types.KeyboardButton("–°–ø—Ä–∞–≤–æ—á–Ω—ã–π —Å–µ—Ä–≤–∏—Å")
        btn3 = types.KeyboardButton("–ö–Ω–æ–ø–∫–∞ —á–∏–ª–∞ -)")
        markup.add(btn1, btn2, btn3)
        bot.send_message(message.from_user.id, '–î–æ–±—Ä–æ –ø–æ–∂–∞–ª–æ–≤–∞—Ç—å! –ó–∞–¥–∞–π—Ç–µ –∏–Ω—Ç–µ—Ä–µ—Å—É—é—â–∏–π –≤–∞—Å –≤–æ–ø—Ä–æ—Å‚ùì',
                         reply_markup=markup)




bot.infinity_polling()
